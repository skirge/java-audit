CREATE FUNCTION some_function ( arg int )
RETURNS NULL ON NULL INPUT
RETURNS int
AS $$ return arg; $$;

SELECT some_function(column) FROM atable ...;
UPDATE atable SET col = some_function(?) ...;






































































































































































































































































































































































































































































CREATE TYPE custom_type (txt text, i int);
CREATE FUNCTION some_function ( arg int )
RETURNS NULL ON NULL INPUT
RETURNS int
AS $$ return arg; $$;

SELECT some_function(column) FROM atable ...;
UPDATE atable ...;
UPDATE atable SET col = some_function(?) ...;

